<div class="container">
  <div class="row">

    <h2>全ユーザー一覧</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>email</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline-dark" %>
          </td>
      <% end %>
      </tbody>
    </table>

  </div>
</div>