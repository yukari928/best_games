<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 mx-auto">

    <h1>編集画面</h1>
    <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @post do |f| %>
      <h4>タイトル</h4>
        <%= f.text_field :title %>
      <h4>本文</h4>
        <%= f.text_area :body %>
        <%= f.submit '保存', class: "btn btn-info" %>

    <% end %>

    </div>
  </div>
</div>